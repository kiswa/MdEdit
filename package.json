{
  "name": "mdedit",
  "version": "1.1.1",
  "description": "A minimalist Markdown editor",
  "private": true,
  "author": "Matthew Ross <root@matthewross.me> (https://matthewross.me)",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiswa/MdEdit"
  },
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve:electron",
    "build": "vue-cli-service build:electron",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.0-11",
    "@fortawesome/free-solid-svg-icons": "^5.1.0-11",
    "@fortawesome/vue-fontawesome": "0.1.0-4",
    "highlight.js": "^9.12.0",
    "marked": "^0.4.0",
    "normalize.css": "^8.0.0",
    "source-map-support": "^0.5.6",
    "vue": "^2.5.16"
  },
  "optionalDependencies": {
    "@fortawesome/pro-light-svg-icons": "^5.1.0-11"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.16",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.16",
    "@vue/cli-service": "^3.0.0-beta.16",
    "@vue/eslint-config-standard": "^3.0.0-beta.16",
    "@vue/test-utils": "^1.0.0-beta.18",
    "chai": "^4.1.2",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "electron-webpack": "^2.1.2",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.3",
    "vue-cli-plugin-electron-builder": "^0.3.2",
    "vue-template-compiler": "^2.5.16"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "electronWebpack": {
    "renderer": {
      "sourceDirectory": "src"
    }
  },
  "build": {
    "appId": "com.kiswa.mdedit",
    "productName": "MdEdit",
    "copyright": "Copyright Â© 2017-2018 ${author}",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "icon": "build/icon.png",
      "category": "TextEditor",
      "target": [
        {
          "target": "AppImage"
        },
        {
          "target": "snap"
        },
        {
          "target": "pacman"
        },
        {
          "target": "deb"
        }
      ]
    }
  }
}
